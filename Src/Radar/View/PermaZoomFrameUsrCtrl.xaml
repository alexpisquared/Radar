<UserControl x:Class="Radar.View.PermaZoomFrameUsrCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Radar.View"
             mc:Ignorable="d" 
             d:DesignWidth="512"
             d:DesignHeight="512"
             Name="ths">
  <Viewbox>
    <Grid Width="512" Height="512" >
      <Ellipse Width="512" Height="512"  Margin="0">
        <Ellipse.Fill>
          <ImageBrush ImageSource="{Binding ImageURL, FallbackValue=https://weather.gc.ca/data/satellite/goes_ecan_vvi_100.jpg}" 
                      Stretch="None" Viewport="-256,-255,1024,1024" ViewportUnits="Absolute" >
            <ImageBrush.Transform>
              <TranslateTransform X="94" Y="-30"/>
            </ImageBrush.Transform>
          </ImageBrush>
        </Ellipse.Fill>
      </Ellipse>
      <Ellipse Width="32" Height="32" StrokeThickness="2.5" Stroke="#ff0" />
    </Grid>
  </Viewbox>
</UserControl>
