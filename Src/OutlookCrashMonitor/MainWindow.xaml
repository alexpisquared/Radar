<Window x:Class="OutlookCrashMonitor.MainWindow"       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       mc:Ignorable="d"
        xmlns:local="clr-namespace:OutlookCrashMonitor" WindowState="Maximized"
        Title="Outlook Crash Monitor" Left="0" Top="0" Topmost="True" Loaded="OnLoaded" MouseEnter="OnMouseEnter"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
  <Viewbox Margin="0">
    <Grid VerticalAlignment="Stretch" Height="1080" Width="1920" >
      <Grid.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="#0000" Offset="0.0"/>
          <GradientStop Color="#a000" Offset="0.1"/>
          <GradientStop Color="#c000" Offset="0.40"/>
          <GradientStop Color="#f000" Offset="0.47"/>
          <GradientStop Color="#f000" Offset="0.56"/>
          <GradientStop Color="#c000" Offset="0.62"/>
          <GradientStop Color="#a000" Offset="0.92"/>
          <GradientStop Color="#0000" Offset="1.00"/>
        </LinearGradientBrush>
      </Grid.Background>
      <TextBlock x:Name="tbkReportC" d:Text="2.6" FontSize="250" FontWeight="Medium" Margin="86 26" VerticalAlignment="Top"    HorizontalAlignment="Right"  Foreground="#5a0" />
      <TextBlock x:Name="tbkReportR"   Text=""    FontSize="100" FontWeight="Normal" Margin="9"     VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#480" d:Text="asdfasdfsd fasd asd fasdf as" />
      <TextBlock x:Name="tbkReportL" d:Text="9.0" FontSize="110" FontWeight="Medium" Margin="86"    VerticalAlignment="Bottom" HorizontalAlignment="Left"   Foreground="#387000" />
      <Button Content="" IsCancel="True" Click="OnClose" Margin="0" Opacity=".1" VerticalAlignment="Top" HorizontalAlignment="Right" />
    </Grid>
  </Viewbox>
</Window>