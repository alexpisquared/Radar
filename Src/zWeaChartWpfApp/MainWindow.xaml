<Window x:Class="zWeaChartWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zWeaChartWpfApp"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
  <!--<Window.DataContext>
    <local:MainViewModel/>
  </Window.DataContext>-->
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="2*"/>
    </Grid.ColumnDefinitions>
    
    <oxy:PlotView Model="{Binding MyModel}" />

    <oxy:Plot Title="{Binding Title}" Grid.Column="1">
      <oxy:Plot.Series>
        <oxy:LineSeries ItemsSource="{Binding PointsTV}"/>
        <oxy:LineSeries ItemsSource="{Binding PointsFV}"/>
        <oxy:LineSeries ItemsSource="{Binding PointsTC}"/>
        <oxy:LineSeries ItemsSource="{Binding PointsFC}"/>
        <oxy:LineSeries ItemsSource="{Binding PointsTT}"/>
        <oxy:LineSeries ItemsSource="{Binding PointsFT}"/>
      </oxy:Plot.Series>
    </oxy:Plot>

    <Button IsCancel="True" Click="OnClose" VerticalAlignment="Top" HorizontalAlignment="Right" />
  </Grid>
</Window>
